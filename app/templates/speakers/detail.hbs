<div class="slide-out">
    <div class="title">
        <div class="slide-out-card">
            {{#link-to "speakers"}}
            <button class="btn btn-outline-primary" type="button">Back</button>
            {{/link-to}}
        </div>
        <div>
            <h3>{{model.lastName}} {{model.firstName}}</h3>
            <img src={{model.img}} class="card-img-top my-3" alt="Обложка автора">
            {{#link-to "speakers.edit" model.id class="btn btn-outline-primary"}}
            edit
            {{/link-to}}
            <button class="btn btn-outline-primary" onclick={{action "deleteSpeaker" this.model}} type="button">delete</button>
        </div>
    </div>
</div>