<div class="slide-out">
    <div class="title">
        <div class="slide-out-card">
            {{#link-to "speakers"}}
            <button class="btn-back" type="button">back</button>
            {{/link-to}}
        </div>
        <h3>{{model.lastName}} {{model.firstName}}</h3>
        <img src={{model.img}} class="card-img-top" alt="Обложка автора">
        <div class="actions">
            {{#link-to "speakers.edit" model.id class="btn-pop"}}
            edit
            {{/link-to}}
            <button class="btn-recessed" onclick={{action "deleteSpeaker" this.model}} type="button">delete</button>
        </div>
    </div>
</div>