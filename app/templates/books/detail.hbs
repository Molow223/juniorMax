<div class="slide-out" style="padding-bottom: 50px;">
    <div class="title">
        <div class="slide-out-card">
            {{#link-to "books"}}
            <button class="btn btn-outline-primary" type="button">Back</button>
            {{/link-to}}
        </div>
        <div>
            <img src={{model.img}} class="card-img-top" alt="Обложка книги">
            <h3>{{model.title}}</h3>

            {{#link-to "books.edit" model.id class="btn btn-outline-primary"}}
            Edit
            {{/link-to}}
            <button type="button" class="btn btn-outline-primary" onclick={{action "deleteBook" model}}>Delete</button>

        </div>
    </div>
</div>