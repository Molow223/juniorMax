<form class="form-col my-5">
    <div class="form-group row">
        <label class="col-form-lable col-sm-6">Title:</label>
        {{input type="text" class="form-control col-sm-6" placeholder="Title" value=title}}
    </div>

    <div class="form-group row">
        <label class="col-form-lable col-sm-6">Author:</label>
        {{input type="text" class="form-control col-sm-6" placeholder="Author" value=author}}
    </div>

    <div class="form-group row">
        <label class="col-form-lable col-sm-6">Img:</label>
        {{input type="text" class="form-control col-sm-6" placeholder="/1.jpg - /8.jpg" value=img}}
    </div>
    <div class="form-group row">
        <label class="col-form-lable col-sm-6">Progress:</label>
        {{input type="text" class="form-control col-sm-6" placeholder="Progress" value=progress}}
    </div>
    <div class="form-group row">
        <label class="col-form-lable col-sm-6">Review:</label>
        {{input type="text" class="form-control col-sm-6" placeholder="Review" value=review}}
    </div>

    <div>
        <button type="submit" class="btn btn-primary">save</button>
    </div>
</form>