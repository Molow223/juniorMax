<form onsubmit={{action "submitForm"}} class="form-col my-5">
    <div class="form-group row">
        <label class="col-form-lable col-sm-6">First Name:</label>
        {{input type="text" class="form-control col-sm-6" placeholder="First Name" value=firstName}}
    </div>

    <div class="form-group row">
        <label class="col-form-lable col-sm-6">Last Name:</label>
        {{input type="text" class="form-control col-sm-6" placeholder="LastName" value=lastName}}
    </div>

    <div class="form-group row">
        <label class="col-form-lable col-sm-6">Img:</label>
        {{input type="text" class="form-control col-sm-6" placeholder="/1.jpg - /8.jpg" value=img}}
    </div>

    <div>
        <button type="submit" class="btn btn-primary">save</button>
    </div>
</form>