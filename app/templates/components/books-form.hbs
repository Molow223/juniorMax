        <form onsubmit={{action "submitForm"}} class="form-col my-5">
            <div class="form-group row">
                <label class=" col-sm-4 col-form-lable text-right">nameBook:</label>
                {{input type="text" class="form-control col-sm-6 mx-auto" placeholder="Название книги" value=this.title}}
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-lable text-right">img:</label>
                {{input type="text" class="form-control col-sm-6 mx-auto" placeholder="/1-/8.jpg" value=this.img}}
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-lable text-right">nameAuthor:</label>
                {{input type="text"  class="form-control col-sm-6 mx-auto" placeholder="Имя Автора" value=author}}
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-lable text-right">pagesBook:</label>
                {{input type="text" class="form-control col-sm-6 mx-auto" placeholder="Кол-во страниц" value=pages}}
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-lable text-right">progress:</label>
                {{input type="text" class="form-control col-sm-6 mx-auto" placeholder="Прогресс" value=progress}}
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Сохранить</button>
            </div>
        </form>
